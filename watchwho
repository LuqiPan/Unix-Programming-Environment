# watchwho: watch who logs in and out

PATH=/bin:/usr/bin
new=/tmp/watchwho1.$$
old=/tmp/watchwho2.$$
>$old       # create an empty file

while :     # loop forever
do
    who >$new
    diff $old $new
    mv $new $old
    sleep 60
done | awk '/>/ { $1 = "in:     "; print}
            /</ { $1 = "out:    "; print}'
